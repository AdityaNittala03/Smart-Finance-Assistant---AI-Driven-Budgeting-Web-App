# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://finance_user:finance_password@localhost:5432/smart_finance
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_finance
DB_USER=finance_user
DB_PASSWORD=finance_password

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# API Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Machine Learning Configuration
ML_MODEL_PATH=ml_models/trained_models
ML_ENABLE_TRAINING=True
ML_AUTO_RETRAIN=False

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Security
BCRYPT_LOG_ROUNDS=12
WTF_CSRF_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment
ENVIRONMENT=development

# External APIs (for future integration)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000