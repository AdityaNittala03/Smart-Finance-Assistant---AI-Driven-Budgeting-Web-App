# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/finance_tracker
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_tracker
DB_USER=your_username
DB_PASSWORD=your_password

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
FLASK_ENV=development
DEBUG=True

# Machine Learning Configuration
MODEL_PATH=backend/ml_models/trained_models/
ML_MODEL_VERSION=1.0.0
RETRAIN_INTERVAL=7  # days

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@financetracker.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Settings
SESSION_TIMEOUT=3600  # seconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900  # seconds (15 minutes)

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls
UPLOAD_FOLDER=uploads/

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Third-party Integrations (for future use)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Backup Configuration
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION=30  # days
BACKUP_LOCATION=backups/

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:5000/api

# Docker Configuration
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_password
POSTGRES_DB=finance_tracker